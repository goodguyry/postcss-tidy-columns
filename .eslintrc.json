{
  "extends": "eslint-config-airbnb-base",
  "env": {
    "jest": true
  },
  "rules": {
    "yoda": [
      "error",
      "always",
      {
        "onlyEquality": true
      }
    ],
    "max-len": [
      "error",
      100,
      2,
      {
        "ignoreComments": true
      }
    ]
  },
  "ignorePatterns": [
    "**/*.md",
    "docs/*",
    "__test/*"
  ]
}
