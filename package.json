{
  "name": "postcss-tidy-columns",
  "version": "0.4.0",
  "description": "PostCSS plugin to manage column and margin alignment.",
  "keywords": [
    "postcss",
    "postcss-plugin",
    "css",
    "columns",
    "grid",
    "flexbox"
  ],
  "author": "Ryan Domingue <ryan@ryandomingue.com>",
  "license": "MIT",
  "repository": "goodguyry/postcss-tidy-columns",
  "bugs": {
    "url": "https://github.com/goodguyry/postcss-tidy-columns/issues"
  },
  "homepage": "https://github.com/goodguyry/postcss-tidy-columns",
  "dependencies": {
    "postcss-calc": "^8.0.0",
    "postcss-value-parser": "^4.1.0"
  },
  "devDependencies": {
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.3",
    "jest": "^27.0.1",
    "jest-cli": "^27.0.1",
    "postcss": "^8.3.0"
  },
  "peerDependencies": {
    "postcss": "^8.3.0"
  },
  "scripts": {
